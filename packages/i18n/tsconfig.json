
  {
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "module": "esnext",  // или "node16"
        "target": "es6",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,  // ✅ Позволяет импортировать JSON-файлы
      },
      "include": ["src"],
    "exclude": ["node_modules", "dist"],
}